page{
    background-color: #fbf9fe;
    font-size: 24rpx;
}

.clearfix:after{
    content:".";
    display:block;
    height:0;
    clear:both;
    visibility:hidden
}
.top-title{
    padding:20rpx;
    text-align: center;
    background-color: #ffffff;
    font-size: 30rpx;
}

.top-tips{
    padding: 20rpx 0 10rpx 20rpx;
}
.shop-item{
    background-color: #ffffff;
    margin-bottom: 20rpx;
}

.shop-item .shop-img{
    width: 160rpx;
    padding: 20rpx;
    height:160rpx;
    float: left;
}

.shop-item .rt{
    float: left;
}
.shop-item .rt .shop-name{
    font-size: 28rpx;
    font-weight: bold;
    padding: 20rpx ;
}
.shop-item .rt .summary{
    padding: 10rpx 20rpx ;
}
.shop-item .rt .bottom{
    padding: 10rpx 20rpx ;
}

















