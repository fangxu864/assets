<scroll-view class="container" scroll-y="true" scroll-into-view="{{scroll_into_view}}" bindscroll="onScroll" style="margin-top: {{isfixed =='fixed' ? '92rpx' : ''}}">
    <view class="banner-box">
        <view class="img-box">
            <image src="../../image/gly.jpg"></image>
        </view>
        <view class="info-box">
            <view>
                <text class="banner-text">hello world</text>
            </view>
        </view>
    </view>
</scroll-view>
